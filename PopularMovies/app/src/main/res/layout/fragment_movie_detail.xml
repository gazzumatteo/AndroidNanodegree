<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@color/teal_500"
            android:gravity="center_vertical"
            android:padding="30dp"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <ImageView
            android:id="@+id/ivMoviePoster"
            android:layout_width="185dp"
            android:layout_height="278dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvMovieTitle"
            android:layout_marginEnd="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMovieTitle"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/ivMoviePoster"
            android:layout_toRightOf="@+id/ivMoviePoster"
            android:textColor="@color/grey"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvMovieLength"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYear"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivMoviePoster"
            android:layout_toRightOf="@+id/ivMoviePoster"
            android:textColor="@color/grey"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tvMovieScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMovieLength"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivMoviePoster"
            android:layout_toRightOf="@+id/ivMoviePoster"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnFavorite"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMovieScore"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/ivMoviePoster"
            android:layout_toRightOf="@+id/ivMoviePoster"
            android:text="@string/btn_favorite"
            android:textColor="@color/grey" />

        <TextView
            android:id="@+id/tvMovieDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ivMoviePoster"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            android:textColor="@color/grey" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tvMovieDescription"
            android:layout_margin="10dp"
            android:background="@color/grey" />
    </RelativeLayout>
</ScrollView>
